generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("BOOKING_DATABASE_URL")
}

enum AppointmentStatus {
  BOOKED
  CONFIRMED
  RESCHEDULED
  CANCELLED_BY_PATIENT
  CANCELLED_BY_STAFF
  NO_SHOW
  COMPLETED
}

enum EventType {
  APPOINTMENT
}

model Patient {
  id          String        @id @default(cuid()) @db.VarChar(27)
  fullName    String        @map("full_name") @db.VarChar(120)
  email       String?       @unique @db.VarChar(255)
  phone       String?       @db.VarChar(32)
  isMale      Boolean?      @map("is_male")
  dateOfBirth DateTime?     @map("date_of_birth") @db.Date
  addressLine String?       @map("address_line") @db.VarChar(255)
  district    String?       @db.VarChar(100)
  province    String?       @db.VarChar(100)
  createdAt   DateTime      @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime      @updatedAt @map("updated_at") @db.Timestamptz(6)
  deletedAt   DateTime?     @map("deleted_at") @db.Timestamptz(6)
  Appointment Appointment[]

  // Relations
  @@index([fullName], map: "idx_patients_full_name")
  @@index([phone], map: "idx_patients_phone")
  @@map("patients")
}

model Appointment {
  id          String            @id @default(cuid())
  patientId   String            @map("patient_id") @db.VarChar(27)
  doctorId    String            @map("doctor_id") @db.VarChar(27)
  locationId  String            @map("location_id") @db.VarChar(27)
  eventId     String            @map("event_id") @db.VarChar(27)
  specialtyId String            @map("specialty_id") @db.VarChar(27)
  status      AppointmentStatus @default(BOOKED)
  reason      String?           @db.VarChar(255)
  notes       String?           @db.Text
  priceAmount Decimal?          @map("price_amount") @db.Decimal(12, 2)
  currency    String            @default("VND") @db.VarChar(3)
  createdAt   DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime          @updatedAt @map("updated_at") @db.Timestamptz(6)
  cancelledAt DateTime?         @map("cancelled_at") @db.Timestamptz(6)
  completedAt DateTime?         @map("completed_at") @db.Timestamptz(6)

  // Relation
  patient     Patient           @relation(fields: [patientId], references: [id], onDelete: Restrict)
  event       Event             @relation(fields: [eventId], references: [id], onDelete: Restrict)

  @@index([doctorId, locationId, specialtyId], map: "idx_appointments_doctor_location_specialty")
  @@map("appointments")
}

model Event {
  id          String        @id @default(cuid())
  eventType   EventType     @default(APPOINTMENT) @map("event_type")
  isTempHold  Boolean       @default(false) @map("is_temp_hold")
  expiresAt   DateTime?     @map("expires_at") @db.Timestamptz(6)
  nonBlocking Boolean       @default(false) @map("non_blocking")
  doctorId    String?       @map("doctor_id") @db.VarChar(27)
  doctorAccountId String?   @map("doctor_account_id") @db.VarChar(27)
  locationId  String?       @map("location_id") @db.VarChar(27)
  serviceDate DateTime?     @map("service_date") @db.Date
  timeStart   DateTime?     @map("time_start") @db.Time(6)
  timeEnd     DateTime?     @map("time_end") @db.Time(6)
  occurredAt  DateTime      @default(now()) @map("occurred_at") @db.Timestamptz(6)
  metadata    Json?
  Appointment Appointment[]

  @@index([doctorId, locationId, serviceDate, timeStart, timeEnd], map: "idx_events_slot")
  @@map("events")
}
